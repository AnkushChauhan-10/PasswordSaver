<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_shape"
        android:paddingTop="30dp"
        android:paddingBottom="30dp"
        android:paddingLeft="10dp"
        android:paddingEnd="10dp"
        android:layout_margin="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/appNameText"
            android:layout_margin="20dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"/>

        <EditText
            android:id="@+id/userName_editText_change"
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:padding="10dp"
            android:drawableLeft="@drawable/ic_baseline_perm_identity_24"
            android:textSize="30dp"
            android:inputType="textPersonName"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:background="@drawable/inner_input_background"
            app:layout_constraintTop_toBottomOf="@id/appNameText"/>
        <EditText
            android:id="@+id/password_editText_change"
            android:layout_width="match_parent"
            android:textSize="30dp"
            android:drawableLeft="@drawable/ic_baseline_lock_24"
            android:textColor="@color/black"
            android:padding="10dp"
            android:inputType="textPersonName"
            android:background="@drawable/inner_input_background"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/userName_editText_change"/>

        <Button
            android:id="@+id/delete"
            android:layout_marginTop="20dp"
            android:text="Delete"
            android:background="@drawable/button_shape"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/password_editText_change"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>