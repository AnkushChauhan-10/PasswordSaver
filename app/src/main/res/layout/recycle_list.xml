<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_shape"
    android:padding="20dp"
    android:layout_margin="20dp"
    android:orientation="vertical">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal">
       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_weight="2"
           android:orientation="vertical">
            <TextView
                android:id="@+id/rec_app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoSizeTextType="uniform"
                android:textSize="40dp"
                android:layout_weight="2"
                android:textColor="@color/white"
                android:text="Facebook"
                android:textStyle="italic"/>
           <TextView
               android:text="Last Update:-"
               android:textColor="@color/white"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"/>
           <TextView
               android:id="@+id/rec_date"
               android:layout_marginStart="10dp"
               android:text="12/08/2022 04:20 pm"
               android:layout_weight="1"
               android:textColor="@color/white"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"/>
       </LinearLayout>
      <ImageButton
          android:id="@+id/menu_button"
          android:layout_marginEnd="10dp"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:background="@drawable/list_shape"
          android:src="@drawable/ic_baseline_more_vert_24"/>

   </LinearLayout>

  <LinearLayout
      android:id="@+id/rec_select_layout"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="40dp"
      android:orientation="vertical">

     <TextView
         android:id="@+id/rec_user_name"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="esdsd"
         android:textSize="20dp"
         android:drawableLeft="@drawable/ic_baseline_perm_identity_24"
         android:textColor="@color/white"
         android:layout_marginStart="5dp"
         android:layout_marginTop="10dp"/>

      <TextView
          android:id="@+id/rec_password"
          android:layout_width="wrap_content"
          android:drawableLeft="@drawable/ic_baseline_lock_24"
          android:layout_height="wrap_content"
          android:textSize="20dp"
          android:text="sdsjk"
          android:textColor="@color/white"
          android:layout_marginStart="15dp"
          android:layout_marginTop="5dp"/>
  </LinearLayout>

</LinearLayout>